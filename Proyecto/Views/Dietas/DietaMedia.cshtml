@{
    ViewData["Title"] = "Dieta Media en Calorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4">Dieta Media en Calorías (&lt;3000 kcal)</h2>

    <h4 class="text-primary">Desayuno</h4>
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/avena.jpg" class="card-img-top" alt="Avena">
                <div class="card-body">
                    <h5 class="card-title">Avena con fruta</h5>
                    <p>Fuente de carbohidratos de absorción lenta y fibra.</p>
                    <p><strong>Calorías:</strong> 250 kcal</p>
                    <p><em>Guía:</em> Acompañar con plátano y canela.</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="text-success">Almuerzo</h4>
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/arroz.jpg" class="card-img-top" alt="Arroz integral">
                <div class="card-body">
                    <h5 class="card-title">Arroz integral con huevo</h5>
                    <p>Buen balance de carbohidratos y proteína.</p>
                    <p><strong>Calorías:</strong> 400 kcal</p>
                    <p><em>Guía:</em> Agregar vegetales al vapor o salteados.</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="text-warning">Cena</h4>
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/sandwich_pavo.jpg" class="card-img-top" alt="Sandwich de pavo">
                <div class="card-body">
                    <h5 class="card-title">Sándwich integral de pavo</h5>
                    <p>Pavo magro, pan integral y vegetales frescos.</p>
                    <p><strong>Calorías:</strong> 350 kcal</p>
                    <p><em>Guía:</em> Acompañar con infusión sin azúcar.</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="text-danger">Snack</h4>
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/nueces.jpg" class="card-img-top" alt="Nueces">
                <div class="card-body">
                    <h5 class="card-title">Nueces</h5>
                    <p>Grasas saludables y energía sostenida.</p>
                    <p><strong>Calorías:</strong> 180 kcal (30g)</p>
                    <p><em>Guía:</em> No superar un puñado por snack.</p>
                </div>
            </div>
        </div>
    </div>
</div>
