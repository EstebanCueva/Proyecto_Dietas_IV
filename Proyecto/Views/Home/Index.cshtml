@{
    ViewBag.Title = "Inicio";
}

<div class="container mt-5">

    <!-- Carrusel más pequeño y centrado -->
    <div id="carruselCalorias" class="carousel slide" data-bs-ride="carousel" style="max-width: 800px; margin: auto;">
        <div class="carousel-inner rounded">
            <div class="carousel-item active">
                <img src="~/Images/IA1.png" class="d-block w-100" alt="Nutrición y Calorías">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Nutrición Saludable</h5>
                    <p>Conoce tu consumo ideal de calorías.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/carrusel1.jpg" class="d-block w-100" alt="Ejercicio y Salud">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Ejercicio Diario</h5>
                    <p>Mejora tu estilo de vida con actividad física.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/AI2.png" class="d-block w-100" alt="Ganar o Perder Peso">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Tu objetivo, tu plan</h5>
                    <p>Calcula tus calorías para ganar o perder peso.</p>
                </div>
            </div>
        </div>

        <!-- Controles del Carrusel -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carruselCalorias" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carruselCalorias" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <!-- Botón debajo del carrusel -->
    <div class="text-center mt-4">
        <a class="btn btn-primary btn-lg" asp-controller="Usuarioskemon " asp-action="Create">
            Calcular Mis Calorías
        </a>
    </div>

    <!-- Paneles de Dieta y Ejercicio -->
    <div class="row mt-5">

        <!-- Panel Dieta -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Images/Saludable.jpg" class="img-fluid rounded-start" alt="Dieta Saludable">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Importancia de una Dieta Saludable</h5>
                            <p class="card-text">
                                Mantener una dieta balanceada ayuda a controlar el peso, prevenir enfermedades y mejorar tu bienestar general.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel Ejercicio -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Images/Run.png" class="img-fluid rounded-start" alt="Ejercicio Regular">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Beneficios del Ejercicio Regular</h5>
                            <p class="card-text">
                                El ejercicio fortalece el corazón, mejora la circulación, aumenta la energía y reduce el estrés.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
